/*********************************************************************************************************************/
/*--------------------------------------------------Documentation----------------------------------------------------*/
/*********************************************************************************************************************/

/*
 * Job description
 *
 * The task - task_Display - shall control the 4 segment display on the THD AdapterLite.
 *
 * It shall do 2 steps
 * 1) fill the buffer, which defines the content on the display, with characters
 * 2) send the buffer to the display
 * 3) fill the buffer with another content
 * 4) send the buffer to the display
 *    loop
 *
 */

/*
 * status: V01.1 2025-09-30
 */

/*********************************************************************************************************************/
/*-----------------------------------------------------Defines-------------------------------------------------------*/
/*********************************************************************************************************************/

#define Display_Content_Update_Speed    100   // update every 100 msec


/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/

#include <Level_Libraries/iLLD/TC37A/Tricore/Cpu/Std/Platform_Types.h>
#include <Level_02_Interfaces/Interface_Libraries/L02_Return_Types.h>

#include <Level_02_Interfaces/AdapterLite/IF_Display.h>

#include "FreeRTOS.h"
#include "task.h"


/*********************************************************************************************************************/
/*-----------------------------------------------------Externals-----------------------------------------------------*/
/*********************************************************************************************************************/

extern volatile uint16 conv_result;


// Reference to Level_02 Service functions

extern L02_Return_Type Func_Adapter_Display_init(void);
extern L02_Return_Type Func_Display_Update_Clock_init(void);
extern L02_Return_Type Func_Display_Update_Clock_start(void);

extern L02_Return_Type Func_SetDisplay(DisplayPrompt character, int position);
extern L02_Return_Type Func_Convert2Display(void);


/*
 * forward declarations
 */
static DisplayPrompt digit_to_prompt(uint8 d);
static void u16_to_4_digits(uint16 value, uint8 digits[4]);

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/


/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/


/*********************************************************************************************************************/
/*
 * The task task_Display operates the display on the Adapter
 * It puts characters into a buffer, which holds the content to be displayed
 * it sends the content of the buffer to the display
 *
 * error return messages are not checked
 */


void task_Display (void *arg)
{
    L02_Return_Type tmp1;


    tmp1 = Func_Adapter_Display_init();

    tmp1 = Func_Display_Update_Clock_init();

    tmp1 = Func_Display_Update_Clock_start();

    while (TRUE)
    {

           uint8 digits[4];


           static uint16 shown;
           static uint8 init = 0;

           uint16 raw = conv_result;
           uint16 deadband = 16;

           if (!init)
           {
               shown = raw; init = 1;
           }
           else
           {
               if ((int32)raw - (int32)shown >= deadband || (int32)shown - (int32)raw >= deadband))
               {
                   shown = raw;
               }
           }

           u16_to_4_digits(shown, digits);

           Func_SetDisplay(digit_to_prompt(digits[3]), 0);
           Func_SetDisplay(digit_to_prompt(digits[2]), 1);
           Func_SetDisplay(digit_to_prompt(digits[1]), 2);
           Func_SetDisplay(digit_to_prompt(digits[0]), 3);

           Func_Convert2Display();

           vTaskDelay(pdMS_TO_TICKS(Display_Content_Update_Speed));
    }

    /*
     * The task shall never arrive at this point. If yes it will be deleted.
     */
    vTaskDelete( NULL );
}


static DisplayPrompt digit_to_prompt(uint8 d)
{
    switch (d)
    {
        case 0: return DispPrompt_0noDot;
        case 1: return DispPrompt_1noDot;
        case 2: return DispPrompt_2noDot;
        case 3: return DispPrompt_3noDot;
        case 4: return DispPrompt_4noDot;
        case 5: return DispPrompt_5noDot;
        case 6: return DispPrompt_6noDot;
        case 7: return DispPrompt_7noDot;
        case 8: return DispPrompt_8noDot;
        case 9: return DispPrompt_9noDot;
        default: return DispPrompt_OFF;
    }
}

static void u16_to_4_digits(uint16 value, uint8 digits[4])
{
    for (int i = 0; i < 4; i++)
    {
        digits[i] = (uint8)(value % 10u);
        value /= 10u;
    }
}

